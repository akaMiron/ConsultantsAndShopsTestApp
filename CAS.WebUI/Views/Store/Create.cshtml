@model CAS.Business.Models.StoreModel

<div class="modal-content">
    <form name="storeForm">
        @Html.AntiForgeryToken()
        <div class="modal-header">
            <h4 class="modal-title col-md-12">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span>Create store</span>
            </h4>
        </div>

        <div class="modal-body">
            @Html.HiddenFor(s => s.Id)
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "ml-3" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-12", required = true } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { htmlAttributes = new { @class = "text-danger" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, new { @class = "ml-3" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control col-md-12", required = true } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { htmlAttributes = new { @class = "text-danger" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="ml-auto btn btn-outline-danger" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-success" onclick="createEntity('store')">Save</button>
        </div>
    </form>
</div>